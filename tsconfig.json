{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "resolveJsonModule": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "typeRoots": [
    "./node_modules/@types"
  ],  
  "exclude": [
    "node_modules",
    "dist"
  ]
}